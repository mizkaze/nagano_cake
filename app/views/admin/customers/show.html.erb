<div class="container">
  <div class="row">
    <div class="mx-auto my-5">
      <h3 class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報</h3>
      <div class="mt-3">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <% if @customer.is_active == true %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-danger">無効</p>
              <% end %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success btn-sm" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>