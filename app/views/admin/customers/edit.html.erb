<div class="container">
  <div class="row">
    <div class="mx-auto my-5">
      <h3 class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
      <div>
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <!--urlは指定しなきゃいけないけど、idは@customerの中に格納されている！-->
        <table class="table table-borderless mt-3">
          <tr>
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td colspan="2"><%= f.text_field :address, class: "col-lg-10 pl-0" %></td>
            <td></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_active, true, checked: true %>
              <%= f.label :done, '有効', value: true %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :done, '無効', value: false %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '変更を保存', class: "btn btn-outline-success btn-sm" %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>

