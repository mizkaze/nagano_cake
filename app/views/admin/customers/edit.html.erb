<h1>Admin::Customers#edit</h1>

<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
<!--urlは指定しなきゃいけないけど、idは@customerの中に格納されている！-->

  <label>会員ID</label>
  <%= @customer.id %><br>

  <label>氏名</label>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %><br>

  <label>フリガナ</label>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %><br>

  <label>郵便番号</label>
  <%= f.text_field :postal_code %><br>

  <label>住所</label>
  <%= f.text_field :address %><br>

  <label>電話番号</label>
  <%= f.text_field :telephone_number %><br>

  <label>メールアドレス</label>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br>

  <label>会員ステータス</label>
  <%= f.radio_button :is_active, true, checked: true %>
  <%= f.label :done, '有効', value: true %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :done, '無効', value: false %><br>

  <%= f.submit '変更を保存' %>

<% end %>

