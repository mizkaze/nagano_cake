<h1>Admin::Homes#top</h1>

<h3>注文履歴一覧</h3>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= l order.created_at %>
      </td>
      <td>
        <%= order.customer.last_name %><%= order.customer.first_name %>
      </td>
      <td>
        <%= order.order_details.inject(0) { |sum, item| sum + item.amount } %>
      </td>
      <td>
        <%= order.status_i18n %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>