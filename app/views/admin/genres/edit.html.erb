<div class="container">
  <div class="row">
    <div class="mx-auto my-5">
      <h3 class="bg-light">ジャンル編集</h3>
      <div class="mt-5">
        <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>ジャンル名</th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '変更を保存', class: "btn btn-outline-success btn-sm" %></td>
          </tr>
        </table>
        <% end %>
      </div>
    </div>
  </div>
</div>