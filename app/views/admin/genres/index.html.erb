<h1>Admin::Genres#index</h1>

<h3>ジャンル一覧・追加</h3>

<!--新規ジャンル投稿-->
<%= form_with model: @new_genre, url: '/admin/genres', method: :post do |f| %>
  <label>ジャンル名</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>



<table>

  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <th><%= genre.name %></th>
        <th><%= link_to "編集する", edit_admin_genre_path(genre.id) %></th>
      </tr>
    <% end %>
  </tbody>

</table>

