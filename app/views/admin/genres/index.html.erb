<div class="container">
  <div class="row">
    <div class="mx-auto my-5">
      <h3>ジャンル一覧・追加</h3>
      <div class="mt-3">
        <!--新規ジャンル投稿-->
        <%= form_with model: @new_genre, url: '/admin/genres', method: :post do |f| %>
          <label>ジャンル名</label>
          <%= f.text_field :name %>
          <%= f.submit '新規登録', class: "btn btn-outline-success btn-sm" %>
        <% end %>
      </div>

      <div class="mt-5">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <th><%= genre.name %></th>
                <th><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-info btn-sm" %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>