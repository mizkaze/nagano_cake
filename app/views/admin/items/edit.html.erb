<div class="container">
  <div class="row">
    <div class="mx-auto mt-5">
      <h3 class="bg-light mb-3">商品編集</h3>
      <div class="mb-5">
        <table class="table table-borderless">
          <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %></td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price %></td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <%= f.radio_button :is_active, true, checked: true %>
              <%= f.label :done, '販売中', value: true %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :done, '販売停止中', value: false %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '変更を保存', class: "btn btn-success btn-sm" %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
