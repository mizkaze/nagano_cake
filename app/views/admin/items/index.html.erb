<div class="container">

  <div class="row">
    <div class="d-flex col-lg-8 mx-auto">
      <h3 class="mt-5 mb-3 mr-auto p-2">商品一覧</h3>
      <div><%= link_to "+", new_admin_item_path, class: "mt-5 mb-3p-2 btn btn-outline-info" %></div>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <table class="table mb-5">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <th><%= item.id %></th>
              <th><%= link_to item.name, admin_item_path(item.id) %></th>
              <th><%= item.price %></th>
              <th><%= item.genre.name %></th>
              <th>
                <% if item.is_active == true %>
                  販売中
                <% else %>
                  販売停止中
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>