<h1>Public::CartItems#index</h1>

<h3>ショッピングカート</h3>

<%= link_to 'カートを空にする', destroy_all_public_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <th><%= cart_item.item.name %></th>
          <th><%= cart_item.item.add_tax_price %></th>
          <th><%= cart_item.amount %></th>
          <th><%= cart_item.item.add_tax_price * cart_item.amount %></th>
          <th><%= link_to '削除する', public_cart_item_path(cart_item.id), method: :delete %></th>
        </tr>
      <% end %>
    </tbody>
  </table>

<label>合計金額</label>
¥<%= @total.round.to_s(:delimited)%>
<br>

<%= link_to '買い物を続ける', root_path %>

<%= link_to '情報入力へ進む', new_public_order_path %>