<h1>Public::Orders#new</h1>


<h3>注文情報入力</h3>
<%= form_with model: @new_order, url: public_orders_path, method: :get do |f| %>
  <h4>支払方法</h4>
  <%= f.radio_button :method_of_payment, :credit_card, checked: true %>
  <%= f.label :クレジットカード, class: "method_of_payment_label" %><br>
  <%= f.radio_button :method_of_payment, :transfer %>
  <%= f.label :銀行振込, class: "method_of_payment_label" %>

  <h4>お届け先</h4>
  <!--ユーザー自身の住所-->
  <%= f.radio_button :address, checked: true %>
  <%= f.label 'ご自身の住所' %><br>
  <%= current_customer.address %>
  
  <!--登録済み住所から選択-->
  <%= f.radio_button :address %>
  <%= f.label '登録住所から選択' %><br>
  <%= f.collection_select :address, current_customer.addresses.all, :id, :address, include_blank: "選択してください" %>
  <!--これから保存するカラム名、配列データ、配列データ個々の識別(id)、引用元のカラム名-->
  
  <!--新しいお届け先-->
  
<% end %>