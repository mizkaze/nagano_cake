<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>

    <table>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払い金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th>
            <%= l order.created_at %>
          </th>
          <th>
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </th>
          <th>
            <% order.items.each do |item| %>
              <p><%= item.name %></p>
            <% end %>
          </th>
          <th>
            <%= order.total_payment %>
          </th>
          <th>
            <%= order.status_i18n %>
          </th>
          <th>
            <%= link_to '表示する', public_order_path(order.id) %>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

