<div class="container">
  <div class="row">
    <div class="my-3">
      <h3 class="bg-light">マイページ</h3>

      <div class="pt-5">
        <div>
          <h4 class="d-inline">登録情報</h4>
          <%= link_to "編集する", edit_public_customer_path(current_customer), class: "btn btn-secondary btn-sm ml-3 align-top" %><br>
        </div>

      <div class="my-4">
        <label>氏名</label>
        <%= @customer.last_name %>　<%= @customer.first_name %><br>

        <label>カナ</label>
        <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %><br>

        <label>郵便番号</label>
        <%= @customer.postal_code %><br>

        <label>住所</label>
        <%= @customer.address %><br>

        <label>電話番号</label>
        <%= @customer.telephone_number %><br>

        <label>メールアドレス</label>
        <%= @customer.email %><br>


        <div class="d-table my-3">
          <div class="d-table-row">
            <div class="d-table-cell"><strong>配送先</strong></div>
            <div class="d-table-cell pl-5 py-2"><%= link_to '一覧を見る', public_addresses_path, class: "btn-primary btn-sm" %></div>
          </div>
          <div class="d-table-row">
            <div class="d-table-cell"><strong>注文履歴</strong></div>
            <div class="d-table-cell pl-5 py-2"><%= link_to '一覧を見る', public_orders_path, class: "btn-primary btn-sm" %></div>
          </div>
        </div>
        <div class="d-table">

        </div>
      </div>
    </div>
  </div>
</div>