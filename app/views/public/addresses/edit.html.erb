<div class="container">
  <div class="row">
    <div class="my-5 col-lg-7 mx-auto">
      <h3 class="bg-light">配送先編集</h3>
      <div class="my-3">
        <%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
          <table class="table table-borderless">
            <tr>
              <th>郵便番号(ハイフンなし)</th>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, class: "col-lg-12 px-0" %></td>
            </tr>
            <tr>
              <th>宛名</th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th></th>
              <td><%= f.submit '変更を保存', class: "btn btn-success btn-sm" %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>