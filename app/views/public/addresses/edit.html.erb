<h1>Public::Addresses#edit</h1>

<h3>配送先編集</h3>

<%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>

  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code %><br>

  <label>住所</label>
  <%= f.text_field :address %><br>

  <label>宛名</label>
  <%= f.text_field :name %>

  <%= f.submit '変更を保存' %>

<% end %>