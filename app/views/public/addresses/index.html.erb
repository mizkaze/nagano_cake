<h1>Public::Addresses#index</h1>

<h3>配送先登録・一覧</h3>

<!--新規登録-->
<%= form_with model: @new_address, url: public_addresses_path, method: :post do |f| %>

  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code %><br>

  <label>住所</label>
  <%= f.text_field :address %><br>

  <label>宛名</label>
  <%= f.text_field :name %>

  <%= f.submit '新規登録' %>

<% end %>

<!--一覧-->
<table>

  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <th>
          <%= address.postal_code %>
        </th>
        <th>
          <%= address.address %>
        </th>
        <th>
          <%= address.name %>
        </th>
        <th>
          <%= link_to '編集する', edit_public_address_path(address.id) %>
          <%= link_to '削除する', public_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </th>
      </tr>
    <% end %>
  </tbody>

</table>