<div class="container">
  <div class="row">

    <div class="col-lg-2 mt-3">
      <%= render 'homes/genre_search', genres: @genres %>
    </div>

    <div class="col-lg-10 my-5 text-center">
      <div class="d-flex flex-wrap pl-4">
        <% @item.each do |item| %>
          <div class="mb-3 mr-3 ml-2">
            <% if item.image.attached? %>
              <%= link_to public_item_path(item.id) do %>
                <%= image_tag item.image, size: "200x200" %><br>
              <% end %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %><br>
            <% end %>
            <%= link_to item.name, public_item_path(item.id) %><br>
            ￥<%= item.price %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

