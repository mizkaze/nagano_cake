<h3>新規会員登録</h3>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
<!--@customer=devise-->
  <%= render "public/shared/error_messages", resource: resource %>

  <label>名前　(姓)</label>
  <%= f.text_field :last_name %>
  <label>(名)</label>
  <%= f.text_field :first_name %><br>

  <label>フリガナ　(セイ)</label>
  <%= f.text_field :last_name_kana %>
  <label>(メイ)</label>
  <%= f.text_field :first_name_kana %><br>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <label>郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code %><br>

  <label>住所</label>
  <%= f.text_field :address %><br>

  <label>電話番号(ハイフンなし)</label>
  <%= f.text_field :telephone_number %><br>

  <div class="field">
    <label>パスワード</label>
    <% if @minimum_password_length %>
    <label>(<%= @minimum_password_length %> 文字以上)</label>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label>パスワード(確認用)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<p>すでに登録済みの方</p>
<%= render "public/shared/links" %>からログインしてください
