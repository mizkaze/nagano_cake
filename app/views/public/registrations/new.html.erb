<div class="container">

  <div class="row">
    <div class="mt-5 mx-auto col-lg-10">
      <h3>新規会員登録</h3>

    <div>
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <!--@customer=deviseで決まっているやつ-->
　　    <%= render "public/shared/error_messages", resource: resource %>

　　  <table class="mx-auto">
　　    <tr>
　　      <th>名前</th>
　　      <th>(姓)</th>
　　      <td><%= f.text_field :last_name %></td>
　　      <th>(名)</th>
　　      <td><%= f.text_field :first_name %></td>
　　    </tr>
　　    <tr>
　　      <th>フリガナ</th>
　　      <th>(セイ)</th>
　　      <td><%= f.text_field :last_name_kana %></td>
　　      <th>(メイ)</th>
　　      <td><%= f.text_field :first_name_kana %></td>
　　    </tr>
　　    <tr>
　　      <th>メールアドレス</th>
　　      <th></th>
　　      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
　　    </tr>
　　    <tr>
　　      <th>郵便番号(ハイフンなし)</th>
　　      <th></th>
　　      <td><%= f.text_field :postal_code %></td>
　　    </tr>
　　    <tr>
　　      <th>住所</th>
　　      <th></th>
　　      <td><%= f.text_field :address %></td>
　　    </tr>
　　    <tr>
　　      <th>電話番号(ハイフンなし)</th>
　　      <th></th>
　　      <td><%= f.text_field :telephone_number %></td>
　　    </tr>
　　    <tr>
　　      <th>パスワード<% if @minimum_password_length %>(<%= @minimum_password_length %> 文字以上)<% end %></th>
　　      <th></th>
　　      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
　　    </tr>
　　    <tr>
　　      <th>パスワード(確認用)</th>
　　      <td></td>
　　      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
　　    </tr>
　　    <tr>
　　      <th></th>
　　      <td></td>
　　      <td></td>
　　      <td></td>
　　      <td class="d-flex justify-content-end"><%= f.submit "新規登録", class: "btn btn-success" %></td>
　　    </tr>
　　  </table>
　　  <% end %>
    </div>
  </div>
  </div>

  <div class="row mb-5">
    <div class="mx-auto">
      <h5 class="mb-2 bg-light">すでに登録済みの方</h5>
      <%= render "public/shared/links" %>からログインしてください
      <!--実装ヒント１/view作成を参照-->
    </div>
  </div>

</div>