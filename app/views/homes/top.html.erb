<h3>新着商品</h3>
<% @new_arrivals.each do |item| %>

  <% if item.image.attached? %>
    <%= link_to public_item_path(item.id) do %>
      <%= image_tag item.image %><br>
    <% end %>
  <% else %>
    <%= image_tag 'no_image' %><br>
  <% end %>
  <%= link_to item.name, public_item_path(item.id) %><br>
  \<%= item.price %><br>

<% end %>

